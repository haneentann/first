@page
@model SignInModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="form-container">
    <h2>Sign In</h2>
    <form method="post">
        <div class="form-group">
            <label for="Username">Username:</label>
            <input type="text" id="Username" name="username" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <div class="mb-3 form-text text-danger">
            @Model.msg
        </div>
        <button type="submit" class="btn-main">Sign In</button>
    </form>
</div>

<style>
    .form-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        margin: 20px auto;
        max-width: 500px;
        text-align: center;
    }

    .form-container h2 {
        font-size: 2.5em;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        font-size: 1.2em;
        margin-bottom: 10px;
    }

    .form-group input {
        width: 100%;
        padding: 10px;
        font-size: 1em;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .btn-main {
        background-color: #333;
        color: #ffeb3b;
        padding: 15px 30px;
        text-decoration: none;
        border-radius: 10px;
        font-size: 1.2em;
        cursor: pointer;
        border: none;
        transition: all 0.3s ease;
    }
</style>
