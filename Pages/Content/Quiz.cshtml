<script>document.addEventListener('DOMContentLoaded', function () {
        const quiz1Questions = [
            {
                question: "What do Minions love to eat the most?",
                options: ["Apples", "Bananas", "Carrots"],
                answer: "Bananas"
            },
            {
                question: "Who is the leader of the Minions?",
                options: ["Kevin", "Stuart", "Bob"],
                answer: "Kevin"
            },
            {
                question: "Which Minion loves to play guitar?",
                options: ["Kevin", "Stuart", "Dave"],
                answer: "Stuart"
            },
            {
                question: "Which Minion is the smallest and cutest?",
                options: ["Kevin", "Bob", "Jerry"],
                answer: "Bob"
            }
        ];

        const quiz2Questions = [
            {
                question: "Who is Gru's assistant?",
                options: ["Dr. Nefario", "Vector", "Scarlet Overkill"],
                answer: "Dr. Nefario"
            },
            {
                question: "What color are Minions?",
                options: ["Yellow", "Green", "Blue"],
                answer: "Yellow"
            },
            {
                question: "What is the name of Gru's dog?",
                options: ["Spike", "Kyle", "Fido"],
                answer: "Kyle"
            },
            {
                question: "What is Gru's profession?",
                options: ["Scientist", "Supervillain", "Teacher"],
                answer: "Supervillain"
            }
        ];

        function setupQuiz(quizId, questions) {
            let quizIndex = 0;
            const quizQuestion = document.getElementById(`${quizId}-question`);
            const quizOptions = document.querySelectorAll(`#${quizId} .quiz-option`);
            const quizResult = document.getElementById(`${quizId}-result`);
            const nextQuestionBtn = document.getElementById(`${quizId}-next-question`);

            function showQuizQuestion(index) {
                const currentQuestion = questions[index];
                quizQuestion.textContent = currentQuestion.question;
                quizOptions.forEach((button, i) => {
                    button.textContent = currentQuestion.options[i];
                });
            }

            quizOptions.forEach((button) => {
                button.addEventListener('click', function () {
                    const answer = this.textContent;
                    if (answer === questions[quizIndex].answer) {
                        quizResult.textContent = 'Correct!';
                        quizResult.style.color = 'green';
                    } else {
                        quizResult.textContent = 'Oops! Try again.';
                        quizResult.style.color = 'red';
                    }
                    nextQuestionBtn.style.display = 'block';
                });
            });

            nextQuestionBtn.addEventListener('click', function () {
                quizIndex = (quizIndex + 1) % questions.length;
                showQuizQuestion(quizIndex);
                quizResult.textContent = '';
                nextQuestionBtn.style.display = 'none';
            });

            showQuizQuestion(quizIndex);
        }

        setupQuiz('quiz1', quiz1Questions);
        setupQuiz('quiz2', quiz2Questions);
    });</script>

