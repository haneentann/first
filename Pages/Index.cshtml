@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}


<div class="hero-section">
    <h1>Welcome to Minion World!</h1>
    <p>Your one-stop destination for all things Minions! Dive into the fun world of Minions, take quizzes, and learn more about your favorite characters!</p>
    <img src="/images/minions-welcome.png" alt="Minions Welcome" class="hero-image" width="600">
    <button id="fun-facts" onclick="location.href='Content/FunFacts'" class="btn-main">Fun Facts</button>
</div>

<div class="features-section">
    <h2>Explore Minion World</h2>
    <div class="feature" id="feature-quiz">
        <img src="/images/quiz.png" alt="Quiz">
        <h3>Quizzes</h3>
        <p>Test your knowledge with fun Minion quizzes!</p>
        <button onclick="location.href='Content/Quiz'" class="btn-main">Take a Quiz</button>
    </div>
    <div class="feature" id="feature-family">
        <img src="/images/family.png" alt="Family">
        <h3>Meet the Minions</h3>
        <p>Get to know all the Minions by name!</p>
        <button onclick="location.href='Content/Family'" class="btn-main">Meet the Family</button>
    </div>
</div>

