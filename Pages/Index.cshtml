<script>document.addEventListener('DOMContentLoaded', function () {
        const heroImage = document.querySelector('.hero-image');
        const quizButton = document.getElementById('start-quiz');

        // Add animation to hero image
        heroImage.classList.add('animated');

        // Add hover effect to quiz button
        quizButton.addEventListener('mouseover', function () {
            quizButton.style.backgroundColor = '#ffeb3b';
            quizButton.style.color = '#333';
        });

        quizButton.addEventListener('mouseout', function () {
            quizButton.style.backgroundColor = '#333';
            quizButton.style.color = '#ffeb3b';
        });
    });</script>

